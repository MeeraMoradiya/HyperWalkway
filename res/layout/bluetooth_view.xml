<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:weightSum="1" >

            <Button
                android:id="@+id/btn_bt1"
                android:layout_width="0dp"
                android:layout_height="60dp"
               android:layout_marginRight="50dp"
                android:layout_weight=".49"
                android:background="@android:color/white"
                android:text="Block1" />

            <View
                android:id="@+id/view1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight=".01"
                android:background="@android:color/black" />

            <Button
                android:id="@+id/btn_bt2"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight=".49"
                android:layout_marginLeft="50dp"
                android:background="@android:color/white"
                android:text="Block2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="1"
            android:layout_height="100dp" >

            <Button
                android:id="@+id/btn_bt3"
                android:layout_width="0dp"
              android:layout_height="60dp"
               android:layout_marginRight="50dp"
                android:layout_weight=".49"
                android:text="Block3"
                android:background="@android:color/white" />
<View android:layout_width="0dp"
    android:layout_height="100dp"
    android:layout_weight="0.01"
    android:id="@+id/view2"
    android:background="@android:color/black" />
            <Button
                android:id="@+id/btn_bt4"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:text="Block4"
                android:layout_marginLeft="50dp"
                    android:layout_weight=".49"
                android:background="@android:color/white" />

        </LinearLayout>
         <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="1"
            android:layout_height="100dp" >

            <Button
                android:id="@+id/btn_bt5"
                android:layout_width="0dp"
                android:layout_height="60dp"
               android:layout_marginRight="50dp"
                android:text="Block5"
                    android:layout_weight=".49"
                android:background="@android:color/white" />

<View
    android:id="@+id/view3"
    android:layout_width="0dp"
    android:layout_height="100dp"
    android:layout_weight="0.01"
    android:background="@android:color/black" />

            <Button
                android:id="@+id/btn_bt6"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:text="Block6"
                android:layout_marginLeft="50dp"
                    android:layout_weight=".49"
                android:background="@android:color/white" />

        </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:weightSum="1"
             android:layout_height="100dp" >

             <Button
                 android:id="@+id/btn_bt7"
                 android:layout_width="0dp"
                 android:layout_weight="0.49"
                android:layout_height="60dp"
               android:layout_marginRight="50dp"
                 android:background="@android:color/white"
                 android:text="Block7" />

             <View
                 android:id="@+id/view4"
                 android:layout_width="0dp"
                 android:layout_weight="0.01"
                 android:layout_height="100dp"
                 android:background="@android:color/black" />

             <Button
                 android:id="@+id/btn_bt8"
                 android:layout_width="0dp"
                 android:layout_weight="0.49"
                 android:layout_marginLeft="50dp"
                 android:layout_height="60dp"
                 android:background="@android:color/white"
                 android:text="Block8" />
         </LinearLayout>
         
